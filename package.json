{
  "name": "faros-scan-results-reporter",
  "version": "1.0.0",
  "description": "CLI for parsing & uploading code scan results to Faros AI",
  "main": "index.js",
  "homepage": "https://github.com/faros-ai/faros-scan-results-reporter#readme",
  "author": "Faros AI, Inc.",
  "license": "Apache-2.0",
  "bin": {
    "faros-scan-results-reporter": "faros-scan-results-reporter"
  },
  "scripts": {
    "build": "tsc -p src",
    "clean": "rm -rf lib node_modules out",
    "fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts' && npm run lint -- --fix",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "prepare": "npm run build",
    "test": "jest --verbose --color",
    "test-cov": "jest --coverage --verbose --color"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/faros-ai/faros-scan-results-reporter.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/faros-ai/faros-scan-results-reporter/issues"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "commander": "^9.3.0",
    "faros-js-client": "^0.7.7",
    "luxon": "^3.4.4",
    "p-limit": "^3.1.0",
    "pino": "^10.1.0",
    "pino-pretty": "^10.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/luxon": "^3.3.6",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.2"
  },
  "jest": {
    "coverageDirectory": "out/coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "out/"
    ],
    "testTimeout": 30000,
    "transform": {
      "\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "test/tsconfig.json"
        }
      ]
    },
    "snapshotFormat": {
      "printBasicPrototype": true,
      "escapeString": true
    }
  }
}
